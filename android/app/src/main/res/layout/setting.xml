<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="5"
        android:useDefaultMargins="true"
        android:padding="8dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:text="Sampling frequency(Hz)" />

        <Spinner
            android:id="@+id/spinnerSamplingFreq"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_width="@dimen/spinner_width"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:text="FFT size(bins)" />

        <Spinner
            android:id="@+id/spinnerFftSize"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_width="@dimen/spinner_width"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:text="The number of Mel filters" />

        <Spinner
            android:id="@+id/spinnerMelFilterbank"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_width="@dimen/spinner_width"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:text="Spectrogram length(sec)" />

        <Spinner
            android:id="@+id/spinnerSpecLength"
            android:layout_column="1"
            android:layout_row="3"
            android:layout_width="@dimen/spinner_width"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="4"
            android:text="Feature width" />

        <Spinner
            android:id="@+id/spinnerFeatureWidth"
            android:layout_column="1"
            android:layout_row="4"
            android:layout_width="@dimen/spinner_width"
            android:layout_height="wrap_content" />

    </GridLayout>


</LinearLayout>